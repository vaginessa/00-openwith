<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.OpenWith" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>

    <item name="preferenceTheme">@style/PreferenceThemeOverlay.OpenWith</item>
    <item name="android:listPreferredItemPaddingStart">?listPreferredItemPaddingLeft</item>
    <item name="android:listPreferredItemPaddingEnd">?listPreferredItemPaddingRight</item>
  </style>

  <style name="Theme.OpenWith.Intro" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>

    <item name="android:windowBackground">@color/theme_primary</item>
  </style>

  <style name="Theme.Transparent" parent="@android:style/Theme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="Theme.Transparent.NoAnimation" parent="@style/Theme.Transparent">
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="Base.BottomSheet.Light" parent="Theme.OpenWith">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">false</item>
    <item name="listPreferredItemPaddingLeft">?attr/dialogPreferredPadding</item>
    <item name="listPreferredItemPaddingRight">?attr/dialogPreferredPadding</item>
    <item name="colorControlActivated">?attr/colorControlHighlight</item>
  </style>

  <style name="BottomSheet.Light" parent="Base.BottomSheet.Light"/>

  <style name="PreferenceThemeOverlay.OpenWith" parent="PreferenceThemeOverlay.v14.Material">
    <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.OpenWith</item>
    <item name="preferenceFragmentStyle">@style/PreferenceFragment.OpenWith</item>
    <item name="preferenceStyle">@style/Preference.OpenWith</item>
  </style>

  <style name="PreferenceFragment.OpenWith" parent="PreferenceFragment.Material">
    <item name="android:divider">@null</item>
  </style>

  <style name="Preference.OpenWith" parent="Preference.Material">
    <item name="android:layout">@layout/preference_open_with</item>
  </style>

  <style name="ThemeOverlay.Progress" parent="">
    <item name="colorControlActivated">?colorAccent</item>
  </style>

</resources>
